    Function CheckedID() As Boolean
        Dim dt As DataTable = _db.FillDataTable("SELECT DISTINCT CongDoan 
                                                FROM QAE_EndMonth 
                                                WHERE DateSave BETWEEN DATEADD(DAY, 1, EOMONTH(GETDATE(), -1)) AND  EOMONTH(GETDATE())")
        Dim same As Integer = 0
        For Each r As DataRow In dt.Rows
            If cbbCongDoan.Text = r("CongDoan") Then
                same += 1
            End If
        Next
        If same <> 0 Then
            ShowWarning("Bạn không thể tạo mới của công đoạn " + cbbCongDoan.Text + " trong tháng này." + Environment.NewLine + "Vui lòng hoàn thành mục kiểm tra thiết bị đo của công đoạn " + cbbCongDoan.Text + " đã tạo trong tháng này trước đó !")
            Return False
        End If
        Return True
    End Function
